{
  "name": "node-setup",
  "version": "1.0.0",
  "description": "RESTful API project setup in Node Js",
  "main": "src/index.ts",
  "scripts": {
    "start": "nodemon",
    "build": "tsc --project ./",
    "serve": "pm2 start ./dist/index.js",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx ./src",
    "test": "jest --runInBand",
    "prisma:introspect": "npx prisma introspect",
    "prisma:generate": "npx prisma generate",
    "prisma:studio": "npx prisma studio",
    "prisma:migrate": "prisma migrate dev --name ${0} --preview-feature",
    "prisma:seed": "prisma db seed --preview-feature"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "pre-push": [
    "build",
    "lint",
    "test"
  ],
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "rootDir": "src/",
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?|ts?)$",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testURL": "http://localhost",
    "setupFiles": [
      "../config_tests.ts"
    ],
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "output": "reports/junit.xml"
        }
      ]
    ]
  },
  "jest-junit": {
    "outputDirectory": "reports",
    "outputName": "junit.xml"
  },
  "devDependencies": {
    "@types/app-root-path": "^1.2.4",
    "@types/body-parser": "^1.19.2",
    "@types/express": "^4.17.13",
    "@types/json-bigint": "^1.0.1",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.4",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "babel-jest": "^27.5.1",
    "jest": "^27.5.1",
    "jest-junit": "^13.0.0",
    "jest-watch-typeahead": "^1.0.0",
    "nodemon": "^2.0.15",
    "prisma": "^3.7.0",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.3",
    "ts-mockery": "^1.2.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "@prisma/client": "^3.7.0",
    "@types/jest": "^27.4.1",
    "@types/swagger-jsdoc": "^6.0.1",
    "app-root-path": "^3.0.0",
    "body-parser": "^1.19.1",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.2",
    "express-validator": "^6.14.0",
    "express-winston": "^4.2.0",
    "helmet": "^4.6.0",
    "inversify": "^6.0.1",
    "inversify-binding-decorators": "^4.0.0",
    "json-bigint": "^1.0.0",
    "morgan": "^1.10.0",
    "reflect-metadata": "^0.1.13",
    "swagger-jsdoc": "^6.1.0",
    "swagger-ui-express": "^4.3.0",
    "winston": "^3.3.3"
  }
}
